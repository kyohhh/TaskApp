<div class="sinupPage">
  <div class="titleArea">
    <h1>TaskApp</h1>
    <div class="text-center"><%= render "devise/shared/links" %>
    </div>
  </div>
  <div class='container'>
    <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-5, signupForm" }, local: true do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", placeholder: "例)タスク太郎" %>
      </div>
      <div class="form-group">
         <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", placeholder: "PC・携帯どちらでも可" ,autocomplete: "email" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, class: "form-control", placeholder:"パスワードを入力してください", autocomplete: "off" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class:"form-control", placeholder: "パスワードを再度入力してください", autocomplete: "off" %>
      </div>
      <div class="text-center">
        <%= f.submit "新規アカウント作成", class: "btn submitBtn" %>
      </div>
    <% end %>
  </div>
</div>
<div class="guestPage">
  <div class='container'>
    <div class="text-center">
      <%= button_to '企業様（閲覧用）', users_guest_sign_in_path, method: :post, class: "btn submitBtn" %>
    </div>
  </div>
</div>